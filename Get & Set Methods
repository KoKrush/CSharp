using System;

public class Person
{

    private string name;
    
    public string Name
    {
        
        get { return name; }
        set { name = value; }
        
    }

    public static void Main(string[] args)
    {
        
    }
}
class Program
  {
    static void Main(string[] args)
    {
      Person myObj = new Person();
      myObj.Name = "Brian"
      Console.WriteLine(myObj.Name);
    }
  }
  
  // OR
  
  public class Person
  {
  
      private string name;
      
      public string Name // Property
      {
          { get; set; }
      }
  }
}
class Program
{
  static void Main(string[] args)
  {
    Person myObj = new Person();
    myObj.Name = "Liam";
    Console.WriteLine(myObj.Name);
  }
}
